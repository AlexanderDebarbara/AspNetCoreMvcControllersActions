@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AspNetCoreMvcControllersActions.Models
@model Pessoa

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Formulario</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h1>Formulario</h1>
    <form asp-action="Formulario" method="post">
        <div class="col-3">
            <label>Nome</label>
            <input class="form-control" type="text" asp-for="Nome" value="" />
            <label>Telefone</label>
            <input class="form-control" type="text" asp-for="Telefone" value="" />
            <br />
            <input class="btn btn-success" type="submit" name="name" value="Cadastrar" />
        </div>
    </form>
</body>
</html>